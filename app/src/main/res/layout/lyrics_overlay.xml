<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@drawable/lyrics_background">

    <TextView
        android:id="@+id/prev_lyrics_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/lyrics_sub_text_color"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="normal"
        android:alpha="0.6"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/current_lyrics_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No lyrics available"
        android:textColor="@color/lyrics_main_text_color"
        android:textSize="18sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/next_lyrics_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/lyrics_sub_text_color"
        android:textSize="15sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="normal"
        android:alpha="0.6"
        android:gravity="center" />

</LinearLayout>